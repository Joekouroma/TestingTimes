<!doctype html>
<html>


	<head>
		<meta charset="utf-8">
		<title>TestingTimes</title>
		<%= stylesheet_link_tag		"application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>

		<header>
      <h1>
        <%= link_to image_tag("/assets/stack-logo.png"), root_path %>
      </h1>


<!-- you can add extra info to the url sort: "recent")-->
      <nav class = "list1">
        <%= link_to "Top", root_path %>
        <%= link_to "Recent", root_path(sort: "recent") %>
        <%= link_to "featured", root_path(filter: "featured") %>

        <%= link_to "Submit", new_story_path %>
      </nav>

    </header>

      
    <article>

      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>

      <%= yield %>
    </article>

	</body>
</html>
